<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="87dp" app:srcCompat="@drawable/questions_amico"
            android:id="@+id/imageView2"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameField" android:hint="Nome" android:minHeight="48dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ageField" android:hint="Idade" android:minHeight="48dp"/>
    <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="49dp" android:id="@+id/radioGroupSexo">
        <RadioButton
                android:text="Masculino"
                android:layout_width="199dp"
                android:layout_height="wrap_content" android:id="@+id/male"/>
        <RadioButton
                android:text="Feminino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/female"/>
    </RadioGroup>
    <TextView
            android:text="SEU TIME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/org" android:textColor="#000000"
            android:textAlignment="center" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
                android:text="São Paulo"
                android:layout_width="199dp"
                android:layout_height="wrap_content" android:id="@+id/tricolorSoberano"/>
        <CheckBox
                android:text="Rival Mané"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rivalMane"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Salvar"
                android:layout_width="203dp"
                android:layout_height="wrap_content" android:id="@+id/saveButton" android:insetLeft="15dp"
                android:insetRight="15dp" tools:ignore="TextContrastCheck"/>
        <Button
                android:text="Limpar"
                android:layout_width="203dp"
                android:layout_height="wrap_content" android:id="@+id/clearButton" android:insetLeft="15dp"
                android:insetRight="15dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp" android:id="@+id/resultsSaved" android:hint="Dados Salvos"
            android:textAlignment="center"/>
    <Switch
            android:text="Tem Supresa ಠﭛಠ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/surprise" android:minHeight="48dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="26dp" android:id="@+id/supriseResult" android:hint="Tem Supresa ಠﭛಠ"
            android:textAlignment="center" tools:ignore="TextContrastCheck"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/toggleButton" android:textOff="Desligado"
            android:textOn="Ligado"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp" android:id="@+id/toggleResults" android:hint="Resultados Toggle"
            android:textAlignment="center" tools:ignore="TextContrastCheck"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/resetButton" android:text="Reiniciar"/>
</LinearLayout>