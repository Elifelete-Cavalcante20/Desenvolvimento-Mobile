<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="59dp" android:id="@+id/receivedResults" android:hint="Dados recebidos"
            android:textAlignment="center"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="137dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_menu_mapmode"
                    android:id="@+id/imageView3"/>
            <Button
                    android:text="Google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/buttonGoogle" android:insetLeft="20dp"
                    android:insetRight="20dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="203dp"
                    android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_dialog_email"
                    android:id="@+id/imageView"/>
            <Button
                    android:text="E-mail"
                    android:layout_width="209dp"
                    android:layout_height="49dp" android:id="@+id/buttonEmail" android:insetLeft="20dp"
                    android:insetRight="20dp"/>
        </TableRow>
    </TableLayout>
    <Button
            android:text="Voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonBack" android:insetRight="150dp"
            android:insetLeft="150dp"/>
</LinearLayout>