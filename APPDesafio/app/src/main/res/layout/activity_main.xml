<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:textAlignment="center"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="273dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/busca" android:inputType="text" android:hint="CEP de Busca"/>
        <Button
                android:text="Buscar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/botaoBuscar" android:backgroundTint="#FFC107"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="121dp" android:id="@+id/resutadoBusca" android:hint="Resultado da Busca"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Exibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/botaoExibir" android:layout_weight="1"/>
        <Button
                android:text="Inserir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/botaoInserir" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="136dp" android:id="@+id/resultadoBanco" android:hint="Resultado do Banco"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/idSeraAtualizado" android:hint="ID para Atualizar"
                    tools:ignore="TouchTargetSizeCheck"/>
            <Button
                    android:text="Atualizar"
                    android:layout_width="129dp"
                    android:layout_height="wrap_content" android:id="@+id/botaoAtualizar"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/novoBairro" tools:ignore="TouchTargetSizeCheck"
                    android:hint="Bairro"/>
            <EditText
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/novoUf" tools:ignore="TouchTargetSizeCheck" android:hint="UF"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText
                    android:layout_width="285dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/IdSeraDeletado" android:layout_weight="1" android:hint="ID para Deletar"
                    tools:ignore="TouchTargetSizeCheck"/>
            <Button
                    android:text="Excluir"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" android:id="@+id/excluirValor" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <Button
            android:text="Excluir Banco "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/botaoExcluir"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/viacep" android:id="@+id/imageView"/>
</LinearLayout>